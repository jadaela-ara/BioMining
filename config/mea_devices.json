  "communication_protocols": {
    "SerialPort": {
      "description": "Communication série RS232/USB",
      "parameters": ["device_path", "baud_rate", "data_bits", "parity", "stop_bits"],
      "typical_paths": {
        "linux": ["/dev/ttyUSB0", "/dev/ttyACM0", "/dev/ttyS0"],
        "windows": ["COM1", "COM2", "COM3", "COM4"],
        "macos": ["/dev/cu.usbserial", "/dev/cu.usbmodem"]
      }
    },
    
    "TCP": {
      "description": "Socket TCP/IP",
      "parameters": ["network_host", "network_port", "timeout_ms"],
      "default_ports": {
        "MCS": 3333,
        "Plexon": 6000,
        "Generic": 8080
      }
    },
    
    "UDP": {
      "description": "Socket UDP",
      "parameters": ["network_host", "network_port", "buffer_size"],
      "use_cases": ["Real-time streaming", "Low latency"]
    },
    
    "SharedMemory": {
      "description": "Mémoire partagée inter-processus",
      "parameters": ["memory_key", "memory_size", "sync_method"],
      "platforms": ["Linux", "Windows"]
    },
    
    "Custom_API": {
      "description": "API propriétaire du fabricant",
      "parameters": ["api_library", "device_path", "config_file"],
      "note": "Nécessite les bibliothèques du fabricant"
    }
  },
  
